@using RealEstateApp.Core.Application.ViewModels.Account;
@model List<UserViewModel>;
@{
    ViewData["Title"] = "Agents";
    int count = 0;
}

<div class="container p-4 px-5">
    <div class="row">
        <h1 class="p-0 mb-4">Administrators</h1>
        <div class="table-responsive py-5 px-5 border rounded-4 inputBackground">
            <div class="d-flex justify-content-start">
                <a type="button" href="./NewUser.html" class="btn btn-outline-info mb-4 fw-medium rounded-5 gap-2 d-flex justify-content-center align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
                        <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z" />
                        <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5" />
                    </svg>
                    New admin
                </a>
            </div>
            <table class="table border-0 table-borderless align-middle">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">FirstName</th>
                        <th scope="col">LastName</th>
                        <th scope="col">Properties</th>
                        <th scope="col">Email</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (UserViewModel user in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.</td>
                            <td>@user.Email</td>
                            <td>
                                <a href="mailto:someone@example.com" class="text-white text-decoration-none">@user.Email</a>
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <a href="#">
                                        <span class="badge bg-info-subtle border border-info-subtle text-info-emphasis rounded-pill">Active</span>
                                    </a>
                                }
                                else
                                {
                                    <a href="#">
                                        <span class="badge bg-light-subtle border border-light-subtle text-light-emphasis rounded-pill">Inactive</span>
                                    </a>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button type="button"
                                            class="btn btn-outline-secondary d-flex align-items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                            <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
